<p id="notice"><%= notice %></p>

<h1>Compras</h1>

<table>
  <thead>
    <tr>
      <th>Nombre cliente</th>
      <th>Apellido cliente</th>
      <th>Monto compra</th>
      <th>Cantidad productos</th>
      <th>Fecha compra</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @compras.each do |compra| %>
      <tr>
        <td><%= compra.nombre_cliente %></td>
        <td><%= compra.apellido_cliente %></td>
        <td><%= compra.monto_compra %></td>
        <td><%= compra.cantidad_productos %></td>
        <td><%= compra.fecha_compra %></td>
        <td><%= link_to 'Show', compra, class:'button radius'  %></td>
        <td><%= link_to 'Edit', edit_compra_path(compra), class:'button radius success' %></td>
        <td><%= link_to 'Destroy', compra, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Compra', new_compra_path, class:'button round success' %>
